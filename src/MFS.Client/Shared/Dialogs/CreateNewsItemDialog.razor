@using MFS.Shared.Dto.NewsItems


<RadzenTemplateForm Data="NewsItemCreateDto" Submit="@((NewsItemCreateDto dto) => Submit(dto))">
    <RadzenFieldset Text="Dodaj news">
        <RadzenStack Gap="1rem">
            <RadzenFormField Text="Nagłówek">
                <RadzenTextBox @bind-Value="NewsItemCreateDto.Header"/>
            </RadzenFormField>
            <RadzenFormField Text="Treść">
                <RadzenTextArea Rows="5" @bind-Value="NewsItemCreateDto.Content"/>
            </RadzenFormField>
            <RadzenFormField Text="Autor">
                <RadzenTextBox @bind-Value="NewsItemCreateDto.Author" />
            </RadzenFormField>
        </RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal" Class="rz-mt-3">
            <RadzenButton ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Primary" Text="Dodaj" />
            <RadzenButton ButtonType="ButtonType.Button" Text="Anuluj" ButtonStyle="ButtonStyle.Danger" Click="@Cancel"></RadzenButton>
        </RadzenStack>
    </RadzenFieldset>
</RadzenTemplateForm>
