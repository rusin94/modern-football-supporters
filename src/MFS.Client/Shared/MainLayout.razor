@inherits LayoutComponentBase
<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => _sidebarExpanded = !_sidebarExpanded)" />
            <RadzenLabel Text="Modern Football Supporters" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@_sidebarExpanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />
            <RadzenPanelMenuItem Text="Aktualności" Icon="newspaper" Path="/news" />
            <RadzenPanelMenuItem Text="Terminarz" Icon="calendar_month" Path="/schedule" />
            <RadzenPanelMenuItem Text="Budżet" Icon="account_balance" Path="/budget" />
            <RadzenPanelMenuItem Text="Forum" Icon="forum" Path="/communities" />
            <RadzenPanelMenuItem Text="Chat" Icon="message" Path="/chat" />
            <RadzenPanelMenuItem Text="Ustawienia" Icon="settings" Path="/settings" />
            <RadzenPanelMenuItem Text="Zarządzanie" Icon="dataset">
                <RadzenPanelMenuItem Text="Dashboard" Path="/management/dashboard"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Aktualności" Path="/management/newsitems"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Wydarzenia" Path="/management/sport-events"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Społeczności" Path="/management/communities"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Użytkownicy" Path="/management/users"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        Footer
    </RadzenFooter>
</RadzenLayout>
<RadzenDialog />
@code {
    bool _sidebarExpanded = true;
}